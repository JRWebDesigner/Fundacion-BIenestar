<script>
    let audio = new Audio('/audio.mpeg');
    audio.loop = true;
    audio.volume = 0.5;
  
    function playAudio() {
      audio.play().catch(error => console.log("Autoplay bloqueado"));
    }
  
    // Intentar reproducir el audio apenas cargue la pÃ¡gina
    window.addEventListener('load', playAudio);
  
    // Si el autoplay es bloqueado, iniciar con el primer clic o toque
    document.addEventListener('click', () => {
      if (audio.paused) {
        playAudio();
      }
    });
  </script>